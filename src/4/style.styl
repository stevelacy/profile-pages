@import "../css/reset.styl"
@import "../css/font-lane.styl"

body
  @extend .font-lane
  background #2980b9 url(bg.jpg)

h1, h2, h3
  color #fafafa

.center
  text-align center

button, input
  padding 10px
  outline none
  border 0
  width 90%

input
  margin 0
  clear both
  background rgba(250, 250, 250, .2)
  color #fff
  &:first-child
    border-radius 5px 5px 0 0
    border-bottom 1px solid rgba(250, 250, 250, .2)
  &:nth-child(2)
    border-radius 0 0 5px 5px

button
  color #fff
  margin 10px
  font-size 20px
  border-radius 5px

.btn-primary
  background rgba(80, 250, 250, .2)

.btn-secondary
  background #e74c3c

.wrapper
  @extend .center

.form
  width 250px
  display inline-block



::-webkit-input-placeholder
  color #cdcdcd

:-moz-placeholder
  color #cdcdcd

::-moz-placeholder
  color #cdcdcd

:-ms-input-placeholder
  color #cdcdcd
